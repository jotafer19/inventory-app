<link rel="stylesheet" href="/styles/formTags.css">
<script src="/scripts/formTags.js" defer></script>

<div class="container form-container">
    <form action="/games/new" method="POST" enctype="multipart/form-data">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" required>
        <label for="date">Release date</label>
        <input type="date" name="date" id="date" required>
        <label for="rating">Rating</label>
        <input type="number" name="rating" id="rating" required>
        <label for="description">Description</label>
        <textarea name="description" id="description"></textarea>
        <label for="image">Image</label>
        <input type="file" name="image" id="image">

        <div>
            <div class="tag-container">
                <input type="text" id="tag-input" placeholder="Select or type to add a tag...">
            </div>
            <ul id="suggestions" class="suggestions-list">
                <% genres.forEach(genre => { %>
                    <li><%= genre.name %></li>
                <% }) %>
            </ul>
        </div>

        <button type="submit">Add game</button>
    </form>
</div>